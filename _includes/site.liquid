<!doctype html>
<html lang="en">
    <head>
        <meta property="og:type" content="website">
        <meta property="twitter:card" content="summary_large_image">
        <meta property="og:url" content="https://arenadecks.com{{ page.url | url }}">
        <meta property="og:title" content="{{ pageTitle }}">
        <meta property="og:description" content="{{ description }}">

        {% if SocialCardImage == blank %}
        <meta property="og:image" content="https://static.arenadecks.com/img/Social/default.png">
        {%else%}
        <meta property="og:image" content="https://static.arenadecks.com/img/Social/{{SocialCardImage}}.webp">
        {% endif %}

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>ArenaDecks.com: {{ pageTitle }}</title>
        <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/elasticlunr/0.9.6/elasticlunr.min.js"></script>
        <link href="//cdn.jsdelivr.net/npm/mana-font@latest/css/mana.min.css" rel="stylesheet" type="text/css" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/deck.css" />
        <link rel="stylesheet" href="/css/site.css" /> 
        
        <link rel="apple-touch-icon" sizes="180x180" href="https://static.arenadecks.com/img/icons/icon-180.png">
        <link rel="icon" type="image/png" sizes="512x512" href="https://static.arenadecks.com/img/icons/icon-512.png">
        <link rel="icon" type="image/png" sizes="256x256" href="https://static.arenadecks.com/img/icons/icon-256.png">
        <link rel="icon" type="image/png" sizes="192x192" href="https://static.arenadecks.com/img/icons/icon-192.png">
        <link rel="icon" type="image/png" sizes="128x128" href="https://static.arenadecks.com/img/icons/icon-128.png">
        <link rel="icon" type="image/png" sizes="64x64" href="https://static.arenadecks.com/img/icons/icon-64.png">
        <link rel="icon" type="image/png" sizes="48x48" href="https://static.arenadecks.com/img/icons/icon-48.png">
        <link rel="icon" type="image/png" sizes="32x32" href="https://static.arenadecks.com/img/icons/icon-32.png">
        <link rel="icon" type="image/png" sizes="24x24" href="https://static.arenadecks.com/img/icons/icon-24.png">
        <link rel="icon" type="image/png" sizes="16x16" href="https://static.arenadecks.com/img/icons/icon-16.png">
        <link rel="manifest" href="static.arenadecks.com/manifest.json">
        <meta name="theme-color" content="#ffffff">

        <script src="/js/search.js"></script>
        <script src="/js/deck.js"></script>
        
    </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">ArenaDecks.com</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/Starter-Decks-Historic/">Historic Starter Decks</a>
            </li>
          </ul>
          <form class="d-flex" id="search-form" onsubmit="return false">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" id="search-box">
            <button class="btn btn-outline-success" type="button" id="search-button">Search</button>
          </form>
        </div>
      </div>
    </nav>

    <!-- Content Goes Here -->
    {{ content }}

    <!-- Search Results Modal -->
    <div class="modal fade" id="Search-Results-Modal" tabindex="-1" aria-labelledby="SearchResults" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Search Results</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body" id="search-results">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>