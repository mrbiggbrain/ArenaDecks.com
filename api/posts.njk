---
permalink: /api/posts.json
---
[
  {% for post in collections.posts  %}
    {% set data = post.data %}
    {
      "title": "{{ data.pageTitle }}",
      "description": "{{ data.description }}",
      "url": "{{ post.url }}",
      "timestamp": "{{ data.date | date('YYYY-MM-DD') }}"
    }{{ '' if loop.last else ',' }}
  {% endfor  %}
]