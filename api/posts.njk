---
permalink: /api/posts.json
---
[
  {% for post in collections.posts  %}
    {% set data = post.data %}
    {
      "title": "{{ data.pageTitle }}",
      "description": "{{ data.description }}",
      "url": "{{ post.url }}",
      "timestamp": "{{ post.date.getMonth() }}/{{ post.date.getDate() }}/{{ post.date.getFullYear() }}"
    }{{ '' if loop.last else ',' }}
  {% endfor  %}
]